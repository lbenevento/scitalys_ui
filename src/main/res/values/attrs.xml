<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="morphInputText">
        <attr name="chipBackgroundColor" format="color|reference" />
        <attr name="chipStrokeColor" format="color|reference" />
        <attr name="chipTextColor" format="color|reference" />

        <attr name="chipStrokeWidth" format="dimension" />
        <attr name="chipStartMargin" format="integer" />

        <attr name="allowUserChips" format="boolean" />
        <attr name="allowDuplicate" format="boolean" />
        <attr name="caseSensitive" format="boolean" />
    </declare-styleable>

    <declare-styleable name="pairingCard">
        <attr name="pairingCardStyle" format="reference" />

        <attr name="strokeColor" format="color|reference" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="cardCornerRadius" format="dimension" />
        <attr name="collapsedCardElevation" format="dimension" />
        <attr name="expandedCardElevation" format="dimension" />
        <attr name="collapsedBackgroundColor" format="color" />
        <attr name="expandedBackgroundColor" format="color" />
        <attr name="chevronTint" format="color" />
    </declare-styleable>

    <declare-styleable name="TraitChip">
        <attr name="traitChipStyle" format="reference" />
        <!-- Chip colors -->
        <attr name="colorCodominantBackground" format="color|reference" />
        <attr name="colorCodominantText" format="color|reference" />
        <attr name="colorCodominantStroke" format="color|reference" />
        <attr name="colorRecessiveBackground" format="color|reference" />
        <attr name="colorRecessiveText" format="color|reference" />
        <attr name="colorRecessiveStroke" format="color|reference" />
        <attr name="colorCoallelicBackground" format="color|reference" />
        <attr name="colorCoallelicText" format="color|reference" />
        <attr name="colorCoallelicStroke" format="color|reference" />
        <!-- Paddings attrs, start and end paddings are already supported by super class. -->
        <attr name="chipTopPadding" format="dimension" />
        <attr name="chipBottomPadding" format="dimension" />
    </declare-styleable>
</resources>