<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.App.StandaloneChip" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.App.StandaloneChip" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Style for PairingCard -->
    <style name="Widget.ScitalysComponents.PairingCard" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">?attr/colorOnSurface</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="collapsedBackgroundColor">?attr/colorOnSurface</item>
        <item name="expandedBackgroundColor">?attr/colorOnSurface</item>
        <item name="chevronTint">?attr/colorPrimary</item>
    </style>

    <!-- Style for TraitChip, it allows to set colors for each kind of TraitChip available.-->
    <style name="Widget.ScitalysComponents.TraiChip" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Chips colors -->
        <item name="colorCodominantBackground">@color/mtrl_choice_chip_background_color</item>
        <item name="colorCodominantText">@color/mtrl_choice_chip_text_color</item>
        <item name="colorCodominantStroke">?attr/colorOnSurface</item>
        <item name="colorRecessiveBackground">@color/mtrl_choice_chip_background_color</item>
        <item name="colorRecessiveText">@color/mtrl_choice_chip_text_color</item>
        <item name="colorRecessiveStroke">?attr/colorOnSurface</item>
        <item name="colorCoallelicBackground">@color/mtrl_choice_chip_background_color</item>
        <item name="colorCoallelicText">@color/mtrl_choice_chip_text_color</item>
        <item name="colorCoallelicStroke">?attr/colorOnSurface</item>
        <!-- Paddings, start and end padding are already supported by the super class. -->
        <item name="chipTopPadding">0dp</item>
        <item name="chipBottomPadding">0dp</item>
    </style>

</resources>